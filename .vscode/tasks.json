{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and test",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "test",
        "-nologo",
        "${workspaceFolder}"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "test",
      "command": "dotnet",
      "type": "shell",
      "group": "test",
      "args": [
        "test",
        "-nologo",
        "${workspaceFolder}"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}